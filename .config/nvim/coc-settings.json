{
    "languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"h",
				"cpp",
				"hpp"
			],
			"rootPatterns": [
				".ccls",
				"../Build/compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
                    "directory": "../.ccls-cache",
                    "hierarchicalPath": true,
                    "retainInMemory": 1
				},
                "index": {
                    "threads": 8
                },
                "client": {
                  "snippetSupport": true
                },
                "compilationDatabaseDirectory": "../Build",
                "clang": { 
                  "extraArgs": [ "-std=c++17" ] 
                },
                "completion": {
                    "enableSnippetInsertion" : true
                },
                "diagnostics": {
                    "onChange": 100,
                    "onSave": 100,
                    "onOpen": 100
                },
                "highlight": { "lsRanges" : true }
			}
		}
    },
    "hover.autoHide": false,
	"diagnostic.virtualText": true,

    "coc.source.buffer.ignoreGitignore": true,
    "coc.preferences.bracketEnterImprove": true,
    "coc.source.dictionary.filetypes": [
        "gitcommit",
        "markdown",
        "help",
        "txt"
    ],
    "coc.source.word.filetypes": [
        "gitcommit",
        "markdown",
        "help",
        "txt"
    ], 
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "coc.preferences.formatOnType": true,
    "explorer.width":30,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": false,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>" : ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    },
    "json.format.enable" : true
}

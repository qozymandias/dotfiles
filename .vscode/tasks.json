            "label": "lite_build",
            "command": "cp scripts/build.py scripts/.build.py.bak && sed -i -e '/if not install_conan/,+1d' scripts/build.py && time ./scripts/build.py --build-dir=$HOME/Documents/Gitlab/dvcs/Build --build-type=debug --build-platform=linux64_gcc7 --build-threads=8 && mv scripts/.build.py.bak scripts/build.py;"
        },
        {
            "type": "shell",
            "label": "py_build_debug",
            "command": "time ./scripts/build.py --build-dir=$HOME/Documents/Gitlab/dvcs/Build --build-type=debug --build-platform=linux64_gcc7 --build-threads=8;"
        },
        {
            "type": "shell",
            "label": "py_build_debug_asan",
            "command": "time ./scripts/build.py --build-dir=$HOME/Documents/Gitlab/dvcs/ASAN_Build --build-type=debug --build-platform=linux64_gcc7_asan --build-threads=8;"
        },
        {
            "type": "shell",
            "label": "lite_build_asan",
            "command": "cp scripts/build.py scripts/.build.py.bak && sed -i -e '/if not install_conan/,+1d' scripts/build.py && time ./scripts/build.py --build-dir=$HOME/Documents/Gitlab/dvcs/ASAN_Build --build-type=debug --build-platform=linux64_gcc7_asan --build-threads=8 && mv scripts/.build.py.bak scripts/build.py;"
